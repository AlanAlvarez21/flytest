<div 
  class="event-notification <%= event_type %> p-4 mb-4 text-sm rounded-lg bg-green-50 dark:bg-gray-800"
  data-controller="notification"
  data-event-type="<%= event_type %>"
>
  <span class="font-medium text-green-800 dark:text-green-400">
    <%= event_type.capitalize %> Alert!
  </span>
  <p class="text-green-800 dark:text-green-400"><%= message %></p>
</div>
